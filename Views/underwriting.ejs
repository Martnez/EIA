<%- include ('./includes/head.ejs') %>

        <div class="dash-main">
            <div class="dash-main-top">
                <div class="form-action-flexed">
                    <input type="text" class="input-space-search" placeholder="Enter detail to search">
                    <button class="btn search">SEARCH</button>
                    <a href="new-policy.html" class="btn other search">ADD NEW</a>
                </div>
            </div>

            <div class="dash-main-body">
                <div class="selection-btns">
                    <a href="" class="list-select-btn active">Motor</a>
                    <a href="" class="list-select-btn">Non-Motor</a>
                </div>
                <table class="info-list-table">
                    <thead>
                            <tr>
                              <th>Reg No.</th>
                              <th>Client Name</th>
                              <th>Sum Insured</th>
                              <th>Type of Cover</th>
                              <th>From</th>
                              <th>To</th>
                            </tr>
                    </thead>
                    
                    <tbody>
                        <% if(policies.length > 0) { %> 
                            <% for(let policy of policies) { %>
                        <tr onclick="document.location='mv-details.html'">
                            <td><%= policy.regN %></td>
                            <td><%= policy.client.firstName%>  <%= policy.client.lastName%></td>
                            <td><%= policy.sumInsured %></td>
                            <td><%= policy.coverType %> </td>
                            <td><%= policy.policyStart %></td>
                            <td><%= policy.policyEnd %></td>
                        </tr>
                        <% } %>
                        <% } else { %>
                          <h2>nothing to display</h2>
                      <% } %>
                       
                    </tbody>
                </table>
            </div>

            <a href="" class="view-more-link">View More</a>

            <div class="date-time">
                <%- include ('./includes/date.ejs') %>
            </div>
        </div>
        <%- include ('./includes/sidePane.ejs') %>
    </div>
</body>
</html>